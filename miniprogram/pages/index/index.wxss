/* miniprogram/pages/index/index.wxss */
page {
  background: rgb(34, 193, 195);
  background: linear-gradient(0deg, rgb(23, 213, 209) 0%, rgb(253, 223, 70) 100%);
}

/* 毛玻璃效果 */
.frosted {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: satuate(150%) blur(20px);
}

.page {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  padding: 80px 40px;
}

.container {
  width: 100%;
  height: 100%;
}

.user {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: stretch;
}

.user-info {
  display: flex;
  justify-content: space-between;
}

.user-info .info {
  width: 30%;
  height: 80rpx;
}